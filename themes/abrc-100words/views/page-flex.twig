{% extends "base.twig" %}

{% block content %}

    {% if flex_template %}
        <section class="{{ post.title_background }}">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10 mt-1 mb-3 pt-1 pb-3">
                        <h1 class="article-h1 pt-5 pb-4 text-primary text-center">{{post.title}}</h1>
                    </div>
                    {% if post.content %}
                    <div class="col-12 col-md-6 mb-3 pb-3">
                        {{post.content}}
                    </div>
                    {% endif %}
                </div>
            </div>
        </section>
    {% endif %}

    {% include 'partial/flex-content.twig' %}

{% endblock %}
