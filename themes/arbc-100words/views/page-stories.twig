{% extends "base.twig" %}

{% block content %}


{% for story in stories %}

{% set numberOfWords = story.content|split(' ')|length %}

    <section class="snap-y snap-mandatory h-screen w-screen bg-{{ story.category | lower | replace({ ' ': '-', '&amp;' : 'and' }) }}">
        <div class="snap-start container mx-auto flex justify-center relative items-center h-full">
            <div class="absolute left-0"><h2 style="font-family: 'Inter', sans-serif; transform: translateX(-50%) translateY(-50%) rotate(-90deg);" class="uppercase text-2xl">{{ story.category }}</h2></div>
            <div class="flex flex-col">
                <span class="category-icon icon-{{ story.category | lower | replace({ ' ': '-', '&amp;' : 'and' }) }}" role="presentation"></span>
                <blockquote class="max-w-4xl {{ numberOfWords <= 75 ? 'short-story' : 'text-3xl' }}">
                    {{ story.content }}
                </blockquote>
                <div class="text-right">
                    <figcaption class="pt-12"><strong>{{ story.display_name }}</strong></figcaption>
                    <span>{{ story.home_campus | upper | replace({ '_' : ' ' }) }}</span>
                </div>
            </div>
        </div>
    </section>
{% endfor %}

{% endblock %}
