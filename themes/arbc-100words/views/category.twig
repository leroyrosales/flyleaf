{# This file demonstrates using most of the index.twig template and modifying
   just a small part. See `search.twig` for an example of another approach #}

{% extends "index.twig" %}

{% block content %}
    {% for story in stories %}

        {% set numberOfWords = story.content|split(' ')|length %}

        <section class="snap-y snap-mandatory min-h-screen flex flex-col justify-center bg-{{ story.category | lower | replace({ ' ': '-', '&amp;' : 'and' }) }}">
            <div class="container mx-auto flex justify-center relative">
                <div class="category-icon icon-{{ story.category | lower | replace({ ' ': '-', '&amp;' : 'and' }) }}" role="presentation"></div>
                <h2 class="rotate-category">{{ story.category }}</h2>
            </div>
            <div class="snap-start container mx-auto flex justify-center relative h-full">
                <div class="flex flex-col">
                    <blockquote class="max-w-4xl {{ numberOfWords <= 75 ? 'short-story' : 'text-3xl' }}">
                        {{ story.content }}
                    </blockquote>
                    <div class="text-right">
                        <figcaption class="pt-12"><strong>{{ story.display_name }}</strong></figcaption>
                        {% if story.home_campus != "do_not_attend" %}
                            <span>{{ story.home_campus | upper | replace({ '_' : ' ' }) }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>
    {% endfor %}
{% endblock %}
