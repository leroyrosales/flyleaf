                <ul>
                <li class="flex items-center" data-menu-btn>FILTER BY CATEGORY  <svg class="pl-2" xmlns="http://www.w3.org/2000/svg" width="22" height="12" fill="none" viewBox="0 0 22 12"><path stroke="#989896" d="m1 1 10 10L21 1"/></svg></li>
                <span data-category-menu>
                {% for category in categories %}
                    <li data-category="{{ category.slug }}"><a class="text-black" href="{{ site.url }}/category/{{ category.slug }}"><div class="h-[13px] w-[13px] inline-block bg-no-repeat bg-contain bg-center icon-{{ category.slug | replace({ ' ': '-', '&amp;' : 'and' }) }}" role="presentation"></div> {{ category.name }}</a></li>
