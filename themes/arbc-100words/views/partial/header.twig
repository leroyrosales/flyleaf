<header class="w-full z-10 py-4 md:pt-8 md:absolute bg-black md:bg-transparent">
    <section>
        <div class="arbc-container justify-between items-center md:items-top" id="navbar">
            <a href="{{ site.url }}"><img class="md:hidden h-8 w-auto" src="{{ site.theme.link }}/assets/images/logos/logo-white.svg" alt="Austin Ridge Bible Church logo"><img class="hidden md:block h-8 w-auto" src="{{ site.theme.link }}/assets/images/logos/logo.svg" alt="Austin Ridge Bible Church logo"></a>
            <h1 class="text-3xl lowercase text-center"><a class="text-white md:text-black" href="{{ site.url }}/stories">{{ site.name }}</a></h1>
