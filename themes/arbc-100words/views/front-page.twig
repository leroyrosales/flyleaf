{% extends "base.twig" %}

{% block content %}

    <section class="pt-12 md:pt-48 pb-4 dots-bg" id="top-dots-bg">
        <article class="arbc-container justify-center">
            <div class="max-w-prose">
                <h1 class="pb-12">{{ post.title }}</h1>
                <div class="text-2xl md:text-3xl">{{ post.content }}</div>
            </div>
        </article>
    </section>

    {% if form %}
        <section class="pt-12 pb-48 dots-bg"  id="bottom-dots-bg">
            <div class="arbc-container justify-center">
                {{ form }}
            </div>
        </section>
    {% endif %}

{% endblock %}
